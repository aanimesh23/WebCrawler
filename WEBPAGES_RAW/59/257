  \includegraphics[width=32mm]{kth_cmyk_elektro_systemtek}%
\else
  \if@ireport
    %% Black white
    \includegraphics[width=32mm]{kth_svv_elektro_systemtek}%
  \else% No logotype
  \mbox{}
