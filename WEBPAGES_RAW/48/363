			    { attrValue: "true_protein", value: 3 },
          		    { attrValue: "true_protein-enzyme", value: 3 },
                    	    { attrValue: "true_protein-tf", value: 3 },
                            ]
                            }
                        },
                
    borderColor : {
        defaultValue: "#C0C0C0",
            discreteMapper: {                                
                attrName: "generic_type",
