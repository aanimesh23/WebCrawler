int widthSize = 800;
int heightSize = 950;
Ballon b;

ArrayList<Ballon> lotsOfBallons = new ArrayList<Ballon>();

void setup() {  
  size(800, 950);

  for (int i = 0; i <300; i++) {
    lotsOfBallons.add(new Ballon(i, i*1000));
  }

  background(255);
}

void draw() {
  background(135, 206, 250);
  for (int i = 0; i < lotsOfBallons.size(); i++) {
    lotsOfBallons.get(i).step();
    lotsOfBallons.get(i).display();
  }
}

