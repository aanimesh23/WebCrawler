<dd><pre class="code xml"><span class="sc3"><span class="re1">&lt;?xml</span> <span class="re0">version</span>=<span class="st0">&quot;1.0&quot;</span><span class="re2">?&gt;</span></span>
<span class="sc0">&lt;!DOCTYPE ipestyle SYSTEM &quot;ipe.dtd&quot;&gt;</span>
<span class="sc3"><span class="re1">&lt;ipestyle</span> <span class="re0">name</span>=<span class="st0">&quot;good colors&quot;</span><span class="re2">&gt;</span></span>
<span class="sc3"><span class="re1">&lt;color</span> <span class="re0">name</span>=<span class="st0">&quot;good blue&quot;</span> <span class="re0">value</span>=<span class="st0">&quot;0 0.506 0.804&quot;</span><span class="re2">/&gt;</span></span>
<span class="sc3"><span class="re1">&lt;color</span> <span class="re0">name</span>=<span class="st0">&quot;good red&quot;</span> <span class="re0">value</span>=<span class="st0">&quot;0.737 0.118 0.278&quot;</span><span class="re2">/&gt;</span></span>
