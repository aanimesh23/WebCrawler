
import browser.*;
import net.www.html.*;


class ActiveLink extends ActiveButton{
   private URL url_;
   
   public void init()
   {
      super.init();
      url_ = null;
      
      String attr = getAttribute( "HREF" );
      if( attr != null ) url_ = new URL(attr);
   }
   
   public void action()
   {
      if( url_ != null ) 
      {
         showDocument( url_ );
      }
      else
      {
         super.action();
      }
   }
   
   public void mouseEnter()
   {
      super.mouseEnter();
      showStatus( "Go to " + url_.toExternalForm() );
   }
   public void mouseExit()
   {
      super.mouseExit();
      showStatus( "" );
   }
}

