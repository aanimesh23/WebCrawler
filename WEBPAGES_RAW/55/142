// -- - image rollover - --
var photo_divs, photo_img, images;
function init()
{
  photo_divs = document.getElementById("photo_div_container").getElementsByTagName("div");
  photo_img = document.getElementById("photo_img");
  images = new Array();
  var i;
  i = new Image(); i.src = photo_img.src; images.push(i);
  i = new Image(); i.src = "media/RaresVernica_photo5.jpg"; images.push(i);
  i = new Image(); i.src = "media/RaresVernica_photo3.jpg"; images.push(i);
  i = new Image(); i.src = "media/RaresVernica_photo2.jpg"; images.push(i);
  i = new Image(); i.src = "media/RaresVernica_photo1.jpg"; images.push(i);
}
function showImage(photo_div_selected, idx) {
  for(var i=0,photo_div;photo_div=photo_divs[i++];){if(photo_div!=photo_div_selected){photo_div.className="photo_available";}}photo_div_selected.className="photo_selected";photo_img.src=images[idx].src;}
// -- - pdf viewer - --
function toggle(obj){
  var el=document.getElementById(obj);if(el.className==""){el.className="hide";}else{el.className="";}}
