// Copyright 1996 Akimbo Systems Inc.
// Permission to use this script is granted to registered users of Globetrotter only.
var msg = "Having the technology doesn\'t mean it\'s wise to use it.  ";
var speed = 300;
var startover = 2000;
function ScrollMsg(n) {
 if (0 < n) {
  var i;
  var out = "";
  for (i=0; i<n; ++i)
   out += " ";
  out += msg;
  n -= 2;
  window.status = out;
  window.setTimeout("ScrollMsg(" + n + ")", speed);
  }
 else if (-n < msg.length) {
  out = msg.substring(-n, msg.length);
  n -= 1;
  window.status=out;
  window.setTimeout("ScrollMsg(" + n + ")", speed);
  }
 else {
  window.status = " ";
  window.setTimeout("ScrollMsg(100)", startover);
  }
 }
ScrollMsg(100);
// -->
</SCRIPT>
